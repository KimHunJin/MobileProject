<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLittleDarkWhite"
    android:orientation="vertical">

    <include layout="@layout/toolbar_custom_ok" />
    <LinearLayout
        android:id="@+id/linearMypage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center">
            <sungkyul.ac.kr.leeform.utils.RoundImageView
                android:id="@+id/imgMypageUser"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/kakao_default_profile_image"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorWhite">
                <TextView
                    android:id="@+id/txtMypageName"
                    android:layout_marginLeft="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="닉네임"
                    android:textColor="@color/colorToolBarTextColor"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:id="@+id/imgMyPage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/myinfo_icon"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/colorLittleDarkWhite" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorWhite">
                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_marginLeft="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="주소"
                    android:textColor="@color/colorToolBarTextColor"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imgAddress"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/myinfo_icon"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/colorLittleDarkWhite"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorWhite">
                <TextView
                    android:id="@+id/txtBankName"
                    android:layout_marginLeft="21dp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="은행명"
                    android:textColor="@color/colorToolBarTextColor"
                    android:textSize="16sp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtBankName"
                    android:background="@color/colorLittleDarkWhite" />
                <TextView
                    android:id="@+id/txtBankNumber"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtBankName"
                    android:textStyle="bold"
                    android:text="계좌번호"
                    android:textColor="@color/colorToolBarTextColor"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imgBank"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/myinfo_icon"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/colorLittleDarkWhite"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorWhite">
                <TextView
                    android:id="@+id/txtPhoneNumber"
                    android:layout_marginLeft="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="핸드폰 번호"
                    android:textColor="@color/colorToolBarTextColor"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imgPhoneNumber"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/myinfo_icon"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/colorLittleDarkWhite"/>
        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/myPageTab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            app:tabTextAppearance="@style/myPage"
            app:tabSelectedTextColor="@color/colorUpdateToolbar"
            app:tabTextColor="@color/colorToolBarTextColor" />

        <android.support.v4.view.ViewPager
            android:id="@+id/mainViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLittleDarkWhite"
            >
        </android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>