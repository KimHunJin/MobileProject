<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLittleDarkWhite"
    android:orientation="vertical">

    <include layout="@layout/toolbar_custom_ok" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center">

        <sungkyul.ac.kr.leeform.utils.RoundImageView
            android:id="@+id/imgMypageUser"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@color/colorUpdateToolbar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:text="닉네임"
                style="@style/myPage"
                android:layout_gravity="center"
                android:textColor="@color/colorToolBarTextColor"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/myinfo_icon"
                android:layout_gravity="right" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorLittleDarkWhite" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginLeft="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소"
                style="@style/myPage"
                android:layout_gravity="center"
                android:textColor="@color/colorToolBarTextColor"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/myinfo_icon"
                android:layout_gravity="right" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorLittleDarkWhite" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="21dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="은행명"
                style="@style/myPage"
                android:layout_gravity="center"
                android:textColor="@color/colorToolBarTextColor"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@color/colorLittleDarkWhite" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorToolBarTextColor"
                style="@style/myPage"
                android:text="계좌번호"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/myinfo_icon"
                android:layout_gravity="right" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorLittleDarkWhite" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginLeft="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="핸드폰 번호"
                style="@style/myPage"
                android:layout_gravity="center"
                android:textColor="@color/colorToolBarTextColor"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/myinfo_icon"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorLittleDarkWhite" />

        <android.support.design.widget.TabLayout
            android:id="@+id/myPageTab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"

            app:tabGravity="center"
            app:tabSelectedTextColor="@color/colorUpdateToolbar"
            app:tabTextColor="@color/colorToolBarTextColor" />

       <android.support.v4.view.ViewPager
            android:id="@+id/mainViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLittleDarkWhite"
           >
        </android.support.v4.view.ViewPager>
    </LinearLayout>
</LinearLayout>