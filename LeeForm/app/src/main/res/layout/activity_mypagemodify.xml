<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLittleDarkWhite"
    android:orientation="vertical">

    <include layout="@layout/toolbar_custom_ok" />

    <include layout="@layout/activity_mypage_userimage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtUserName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:hint="닉네임"
            android:background="@android:color/transparent"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorToolBarTextColor"
            android:textSize="16sp"

             />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorLittleDarkWhite" />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="21dp"
            android:hint="주소"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorToolBarTextColor"
            android:textSize="16sp"
            android:background="@android:color/transparent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorLittleDarkWhite" />
        <EditText
            android:id="@+id/edtAccountName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="21dp"
            android:hint="계좌명의"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorToolBarTextColor"
            android:textSize="16sp"
            android:background="@android:color/transparent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorLittleDarkWhite" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtBankName"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:hint="은행명"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorToolBarTextColor"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:layout_gravity="center"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@color/colorLittleDarkWhite" />

            <EditText
                android:id="@+id/edtBankNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="계좌번호"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorToolBarTextColor"
                android:textSize="16sp"
                android:background="@android:color/transparent"/>

            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorLittleDarkWhite" />
        <EditText
            android:id="@+id/edtPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="21dp"
            android:hint="핸드폰 번호"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorToolBarTextColor"
            android:textSize="16sp"
            android:background="@android:color/transparent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorLittleDarkWhite" />

    </LinearLayout>
</LinearLayout>