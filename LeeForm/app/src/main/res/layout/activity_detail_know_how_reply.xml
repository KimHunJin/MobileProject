<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context="sungkyul.ac.kr.leeform.activity.knowhow.DetailKnowHowReplyActivity">

    <ListView
        android:id="@+id/lstKnowHowDetailReply"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorGrayBright"
        android:divider="@color/colorBlack"
        android:dividerHeight="0.5dp"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#e3e3e3"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtKnowHowDetailReplyContents"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.85"
            android:background="@drawable/main_list_background"
            android:gravity="center_vertical"
            android:hint="댓글로 표현하세요!"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorToolBarTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtKnowHowDetailReplyRegister"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="등록"
            android:textColor="@color/colorUpdateToolbar"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
