<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@color/colorMain"
    tools:context=".activity.knowhow.CreateKnowHowExplainActivity">

    <ImageView
        android:id="@+id/imgCreateExplain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:src="@drawable/ic_center_focus_weak_black_48dp"
        android:background="@drawable/retangle_box"/>

    <EditText
        android:layout_marginTop="4dp"
        android:textColorHint="@color/colorGray"
        android:hint="내용을 입력하세요."
        android:textColor="@color/colorGray"
        android:textSize="18sp"
        android:id="@+id/edtCreateExplain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@drawable/retangle_box"
        android:gravity="start"
        android:padding="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnExplainOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text="확인" />

        <Button
            android:id="@+id/btnExplainCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text="취소" />

    </LinearLayout>

</LinearLayout>
