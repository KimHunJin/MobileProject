<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/toolbar_custom_ok" />

    <ListView
        android:id="@+id/replyList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:divider="@color/colorGray"
        android:dividerHeight="1dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/colorLittleDarkWhite"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtCommunityReplyContents"
            android:layout_width="0dp"
            android:textColor="@color/colorBlack"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.85"
            android:background="@drawable/main_list_background"
            android:gravity="center_vertical"
            android:hint="댓글로 표현하세요!"
            android:padding="10dp"
            android:textColorHint="@color/colorToolBarTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtCommunityReplyRegister"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="등록"
            android:textColor="@color/colorUpdateToolbar"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>