<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@drawable/navback"
        android:orientation="horizontal">

        <sungkyul.ac.kr.leeform.utils.RoundImageView
            android:id="@+id/imgNavUser"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/circle_img" />

        <TextView
            android:id="@+id/txtNavUserNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@id/imgNavUser"
            android:text="사용자 이름"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

    </RelativeLayout>


    <ListView
        android:scrollbars="none"
        android:id="@+id/lstNavItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorBlack"
        android:dividerHeight="1dp"></ListView>

</LinearLayout>